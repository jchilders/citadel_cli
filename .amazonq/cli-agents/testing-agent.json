{
  "name": "testing-agent",
  "description": "Testing agent for Citadel CLI with auto-approved test commands",
  "allowedTools": [
    "execute_bash",
    "fs_read",
    "fs_write",
    "todo_list"
  ],
  "toolsSettings": {
    "execute_bash": {
      "allowedCommands": [
        "npm test.*",
        "npm run test.*",
        "vitest.*",
        "cd .* && npm test.*",
        "cd .* && npm run test.*",
        "ls .*",
        "find .*",
        "grep .*",
        "head .*"
      ],
      "autoAllowReadonly": true
    }
  }
}
